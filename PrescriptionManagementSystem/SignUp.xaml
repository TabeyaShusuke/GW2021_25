<Window x:Class="PrescriptionManagementSystem.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrescriptionManagementSystem"
        mc:Ignorable="d"
        Title="SignUp" Height="260.163" Width="240.39" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Window.Resources>
        <local:infosys202125DataSet x:Key="infosys202125DataSet"/>
        <CollectionViewSource x:Key="userViewSource" Source="{Binding User, Source={StaticResource infosys202125DataSet}}"/>
    </Window.Resources>
    <Grid Margin="0,0,0,0" DataContext="{StaticResource userViewSource}">
        <StackPanel Margin="0,0,0,175" Orientation="Horizontal">
            <Label Content="ユーザー名" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBox x:Name="Id" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="129" FontSize="20" Height="25"/>
        </StackPanel>
        <StackPanel Margin="-4,58,4,0" Height="58" VerticalAlignment="Top" Orientation="Horizontal">
            <Label Content="パスワード" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <PasswordBox PasswordChar="●" x:Name="Password" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="135" FontSize="20" Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="-1,123,1,60">
            <Label Content="確認パスワード" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <PasswordBox PasswordChar="●" x:Name="Confirmation" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="106" FontSize="20" Height="25"/>
        </StackPanel>
        <Button Content="キャンセル" x:Name="Cancel" Click="Cancel_Click" Width="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="9,0,0,33"/>
        <Button Content="登録" x:Name="Signup" Click="Signup_Click" Width="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,33"/>
    </Grid>
</Window>
